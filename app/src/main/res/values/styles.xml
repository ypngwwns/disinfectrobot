<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">#FFF1F1F1</item>
        <item name="android:colorForeground">#FF2F2F2F</item>
    </style>

    <style name="DeployFragmentTextStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">9.5dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainFragmentTextStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16.5dp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="edit_main_bg">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">3dp</item>
    </style>
</resources>