<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/list_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/list_drag" />

    <TextView
        android:id="@+id/point_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:gravity="center"
        android:background="@drawable/textview_bg"
        android:textColor="@color/textview_text_bg"
        android:textSize="20dp" />

    <Button
        android:id="@+id/edit_point"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@color/button_text_bg" />

    <Button
        android:id="@+id/delete_point"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/button_text_bg" />

    <Button
        android:id="@+id/moveto_point"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="前往"
        android:textColor="@color/button_text_bg"
        android:visibility="gone" />

</LinearLayout>