<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_point_list_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:padding="8dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/get_cur_point"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="@color/button_text_bg"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/navi_point_list"
                android:textColor="@color/colorText"
                android:textSize="20sp" />

            <Button
                android:id="@+id/edit_point_list"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:text="@string/edit_point_list"
                android:textColor="@color/button_text_bg"
                android:textSize="20sp" />

            <Button
                android:id="@+id/close_point_list"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:text="@string/close_point_list"
                android:textColor="@color/button_text_bg"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryLight" />
    </LinearLayout>

    <com.hitqz.disinfectionrobot.widget.DragListView
        android:id="@+id/navigation_point_list"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:background="@color/colorPrimary" />

</LinearLayout>